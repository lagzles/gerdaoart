<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <%- @carousels.each_with_index do |carousel, index| %>
      <li data-target="#myCarousel" data-slide-to="#{index)" class="#{'active' if index == 0}"></li>
    <% end %>
  </ol>
  <!-- Wrapper for slides -->
  <div class="carousel inner" role="listbox">
    <%- @carousels.order(image_id: :asc).order(order: :asc).each_with_index do |carousel, index| %>
      <div class="item #{'active' if index == 0} " >
        <div><%= image_tag( carousel.url.url) %> </div>
          <%= link_to image_path(carousel.image) do %>
          <div class="carousel-caption">
            <h2><%= carousel.name %></h2>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<%= stylesheet_link_tag "home" %>
<%= javascript_include_tag "home" %>
