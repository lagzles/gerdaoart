<%= simple_form_for @image , html: {class: 'form-horizontal'} do |f| %>
  <%= f.error_notification%>
  <%= f.input :url, as: :file %>
  <%= f.input :title %>
  <%= f.input :carousel_id, :collection => Carousel.all, :label_method => :name, :value_method => :id,
  :label => 'Carrosel'%>
  <%= f.input :description %>
  <%= f.input :tags %>

  <%= f.button :submit %>

<% end %>
