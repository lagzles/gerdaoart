<%= simple_form_for @image , html: {class: 'form-horizontal'} do |f| %>
  <%= f.error_notification%>
  <%= f.input :url, as: :file %>
  <%= f.input :title %>
  <%= f.input :category_id, :collection => @categories, :label_method => :name, :value_method => :id,
  :label => 'Categoria'%>
  <%= text_field_tag :category%>
  <%= f.input :description %>
  <%= f.input :tags %>

  <%= f.button :submit %>

<% end %>
