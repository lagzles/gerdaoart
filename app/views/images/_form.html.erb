<%= simple_form_for(@image, html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :url, as: :file%>
    <%= f.input :order%>
    <%= f.input :description%>
    <%= f.input :drawing_id, :collection => Drawing.all, :label_method => :title, :value_method => :id,
    :label => 'Desenho'%>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
