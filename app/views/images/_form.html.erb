<%= simple_form_for([@drawing, @image], html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :url, as: :file%>
    <%= f.input :order%>
    <%= f.input :description%>
    <%= hidden_field_tag :drawing_id, @drawing.id%>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
