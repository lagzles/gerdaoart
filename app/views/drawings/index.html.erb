<%- if logged?%>
  <p id="notice"><%= notice %></p>
  <div class='row justify-content-md-center'>
    <div class='col-lg-10 col-md-10 col-sm-10'>
      <%= link_to 'novo desenho', new_drawing_path%>
      <table class="table">
        <thead>
          <tr>
            <th>Nome do desenho</th>
            <th>Categoria</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @drawings.each do |drawing| %>
            <tr>
              <td><%= link_to drawing.title, drawing_path(drawing)  %></td>
              <td><%= drawing.category.name %></td>
              <td><%= link_to 'add images', new_drawing_path(drawing) %></td>
              <td><%= link_to 'deletar', drawing, method: :delete, data: { confirm: 'isso vai fazer com que todos os desenhos sejam deletados junto, tem certeza?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
<br></br>
<div class="row justify-content-center">
  <div class="col-lg-12 col-md-12 col-sm-12">
    <p class="filter_title" >Filter</p>
    <div class="row justify-content-center">
      <div class='col-lg-1 col-md-1 col-sm-1'>
        <%= link_to 'all', root_url, class: "filter_menu" %>
      </div>
      <%- @categories.each do |category|%>
        <div class='col-lg-1 col-md-1 col-sm-1'>
          <%= link_to category.name, root_path(category_id: category.id), class: "filter_menu"%>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class='row'>
  <%- @drawings.each do |drawing| %>
    <div class='col-lg-6 col-md-6 col-sm-12'>
      <br></br>
      <%= link_to drawing_path(drawing) do %>
        <%=  image_tag drawing.images.order(order: :desc).first.url.url(:thumb) , class: 'image-border'%>
        <div class="image-caption">
          <h4><%= drawing.title %></h4>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
