<div class="row justify-content-md-center">
  <div class="col-lg-8 col-md-8 col-sm-12 align-self-center">
    <h4 class='image-title'><%= @drawing.title%> in <%= @drawing.category.name%></h4>
    <%- if logged? %>
      <%= link_to 'editar', edit_drawing_image_path(@drawing)%>
      <br>
      <%= link_to 'adicionar desenho/imagem', new_drawing_image_path(@drawing)%>
      <br>
    <% end %>
  </div>
</div>
<div class="row justify-content-md-center">
    <%- @drawing.images.order(order: :asc).each do |image|%>
    <div class="col-lg-9 col-md-9 col-sm-12 align-self-center">
      <%= image_tag image.url.url, class:'image-border' %>
    <br></br>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-12 align-self-center">
      <div class="image-description">
        <%= image.name%>
        <br>
        <%= image.description %>
      </div>
      <%= link_to 'editar', edit_drawing_image_path(@drawing, image) if logged?%>
      <%= link_to '[x]', image, method: :delete, data: { confirm: 'Are you sure?' } if logged?%>
    </div>
  <% end %>
</div>
