<%= simple_form_for(@carousel) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description%>
    <%= f.input :category_id, :collection => Category.all, :label_method => :name, :value_method => :id,
    :label => 'Categori'%>

    <%= text_field_tag :category %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
