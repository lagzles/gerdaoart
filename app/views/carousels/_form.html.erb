<%= simple_form_for(@carousel, html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :url, as: :file%>
    <%= f.input :description%>
    <%= f.input :image_id, :collection => Image.all, :label_method => :title, :value_method => :id,
    :label => 'Imagem'%>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
